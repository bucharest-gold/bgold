{
  "name": "bgold",
  "version": "0.1.0",
  "description": "A CLI tool to setup a new Node.js project based on bucharest-gold guidelines.",
  "main": "index.js",
  "scripts": {
    "test": "nyc tape test/*.js | tap-spec",
